<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <ItemGroup>
        <!-- Include files to copy from the package -->
        <WebFilesToCopy Include="$(MSBuildThisFileDirectory)../web-files/**/*.*"/>
    </ItemGroup>

    <Target Name="CopyContent" BeforeTargets="Build">
        <!-- Copy files to the project directory -->
        <Copy SourceFiles="@(WebFilesToCopy)" DestinationFolder="$(ProjectDir)web-files/%(RecursiveDir)" SkipUnchangedFiles="true" />
    </Target>
</Project>
